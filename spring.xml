<beans >  
    <bean id="triangle" class="javaspringtest.Triangle" >            
        <property name="points" >      
            <list>
                <ref bean="zeroPoint" />
                <ref bean="zeroPoint2" />
                <ref bean="zeroPoint3" />
            </list>      
        </property>            
    </bean>    
    
    <bean id="zeroPoint" class="javaspringtest.Point" >
        <property name="x" value="${zeroPoint.x}"/>
        <property name="y" value="${zeroPoint.y}"/>
    </bean>
    
    <bean id="zeroPoint2" class="javaspringtest.Point" >
        <property name="x" value="0"/>
        <property name="y" value="-20"/>
    </bean>
    
    <bean id="zeroPoint3" class="javaspringtest.Point" >
        <property name="x" value="20"/>
        <property name="y" value="0"/>
    </bean>
    
    <!--<bean class="javaspringtest.myBeanFactoryPP" />-->
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" >
        <property name="locations" value="pointsconf.properties" />
        <!--<property name="locations" value="classpath:pointsconf.properties" />-->
    </bean>
</beans>